<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_game"
    tools:context=".GameActivity">

    <!-- затемнение, чтобы фон не мешал -->
    <View
        android:id="@+id/dim_layer_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- верхняя панель со счётом -->

    <!-- текст с результатом -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="363dp"
        android:layout_height="139dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Иконка игрока -->
        <ImageView
            android:id="@+id/player_icon"
            android:layout_width="141dp"
            android:layout_height="120dp"
            android:contentDescription="Игрок"
            android:src="@drawable/player_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Иконка бота -->
        <ImageView
            android:id="@+id/bot_icon"
            android:layout_width="141dp"
            android:layout_height="120dp"
            android:contentDescription="Бот"
            android:src="@drawable/bot_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#FFFF6B6B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- карточка с полем 3×3 -->
    <LinearLayout
        android:id="@+id/board_card"
        android:layout_width="293dp"
        android:layout_height="295dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/board_card"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_result"
        app:layout_constraintVertical_bias="0.316">

        <GridLayout
            android:id="@+id/game_grid"
            android:layout_width="257dp"
            android:layout_height="258dp"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/button_1"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_2"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_3"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_4"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_5"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_6"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_7"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_8"
                style="@style/GameCellStyle" />

            <Button
                android:id="@+id/button_9"
                style="@style/GameCellStyle"
                android:layout_width="75dp"
                android:layout_height="77dp" />
        </GridLayout>
    </LinearLayout>

    <!-- нижние кнопки -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="ЗАНОВО"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/secondary_button"
            android:text="НАЗАД"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
